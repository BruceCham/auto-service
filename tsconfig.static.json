{
  "extends": "./tsconfig.json",
  "include": ["types"],
  "files": ["static/service.ts", "src/utils/getModelDeps.ts"],
  "compilerOptions": {
    "outDir": "static",
    "module": "UMD",
    "target": "ES5",
    "allowUmdGlobalAccess": true
  },
  "exclude": [
    "node_modules",
    "build",
    "es",
    "lib",
    "dist",
    "umd",
    "config",
    "scripts",
    "templates",
    "__tests__",
    "tests",
    "**/__mocks__/*",
    "tmp"
  ]
}
